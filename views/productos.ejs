<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tienda Generica - Modulo Productos</title>

  <!-- Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta name="description" content="Tienda Generica - Modulo Productos">
  <meta name="author" content="">
  <link rel="shortcut icon" href="favicon.ico">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- FontAwesome JS-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

  <!-- App CSS -->
  <link id="theme-style" rel="stylesheet" href="css/portal.css">
  <link id="theme-style" rel="stylesheet" href="css/style.css">
  <style>
    .form-control{
      padding-top: .4rem;
      padding-bottom: .4rem;
      height: 2.4rem;
      border-color: #e7e9ed;
      color: #5d6778;
    }
  </style>
</head>

<body class="app">
  <!-- Header / Navbar Include -->
  <%- include('templates/navbar.ejs') %>
  <div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
      <div class="container-xl">

        <div class="row g-3 mb-4 align-items-center justify-content-between">
          <div class="col-auto">
            <h1 class="app-page-title mb-0">Modulo productos</h1>
          </div>
          <div class="col-auto">
            <div class="page-utilities">
              <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                <div class="col-auto">
                  <form class="table-search-form row gx-1 align-items-center">
                    <div class="col-auto">
                      <div class="row g-0">
                        <div class="form-group col-md-8">
                          <input type="text" name="search" class="form-control" placeholder="Buscar..." aria-label="search">
                        </div>
                        <div class="form-group col-md-4">
                          <select class="form-select w-30" name="type" aria-label="type">
                            <option selected value="nombre_producto">Nombre</option>
                            <option value="codigo_producto">Codigo</option>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <button type="submit" class="btn app-btn-secondary">Buscar</button>
                    </div>
                    <div class="col-auto">
                      <button type="button" class="btnAdd btn app-btn-primary">Agregar Producto</button>
                    </div>
                  </form>

                </div><!--//col-->

              </div><!--//row-->
            </div><!--//table-utilities-->
          </div><!--//col-auto-->
        </div><!--//row-->

        <div class="app-card app-card-orders-table shadow-sm mb-5">
          <div class="app-card-body">
            <div class="table-responsive">
              <table class="table app-table-hover mb-0 text-left">
                <thead>
                <tr>
                  <th class="d-none">Id</th>
                  <th>Codigo</th>
                  <th>Nombre</th>
                  <th>Proveedor</th>
                  <th>Precio Compra</th>
                  <th>IVA</th>
                  <th>Precio Venta</th>
                  <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                <% productos.forEach( (producto)=> {  %>
                  <tr>
                    <td class="d-none"><%= producto._id %></td>
                    <td><%= producto.codigo_producto %></td>
                    <td><%= producto.nombre_producto %></td>
                    <% if(producto.proveedor.length > 0){%>
                      <td class="d-none"><%= producto.proveedor[0].nit_proveedor %></td>
                      <td><%= producto.proveedor[0].nombre_proveedor %></td>
                    <% }else { %>
                      <td></td> 
                      <td></td> 
                    <% } %> 
                    <td><%= producto.precio_compra %></td>
                    <td><%= producto.iva_compra %></td>
                    <td><%= producto.precio_venta %></td>
                    <td>
                      <a type="button" class="btnEdit btn-sm btn-success">Ver</a>
                      <a type="button" href="/productos/borrar/<%= producto._id %>" class="btn-sm btn-danger">Borrar</a>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
              </table>
            </div><!--//table-responsive-->
          </div><!--//app-card-body-->
        </div><!--//app-card-->



      </div><!--//container-fluid-->
    </div><!--//app-content-->

    <footer class="app-footer">
      <div class="container text-center py-3">

      </div>
    </footer><!--//app-footer-->

  </div><!--//app-wrapper-->

  <!-- Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Producto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-primary" role="alert">
            Descargue el ejemplo del archivo CSV <a href="/examples/ProductosEjemplo.csv" class="alert-link">Click aqui</a>.
          </div>
          <form action="/productos/crear" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="col-md-12">
                <label for="CSV" class="form-label">Agregue el archivo CSV</label>
                <input class="form-control" type="file" name="CSV" id="CSV">
              </div>
            </div>
            <div class="row">
              <hr>
              <div class="col-md-12 d-inline-flex">
                <button  type="button" class="d-flex justify-content-start btn btn-secondary me-auto" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn app-btn-primary d-flex justify-content-end">Guardar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div><!-- End addModal-->

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="addModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Editar Producto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/productos/editar" method="post">
            <div class="row">
              <input type="hidden" id="id_editar" name="id_editar">
              <div class="col-md-6 mb-3">
                <label for="codigo_editar" class="form-label">Codigo producto</label>
                <input type="tel" required class="form-control" name="codigo_editar" id="codigo_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="nombre_editar" class="form-label">Nombre</label>
                <input type="text" required class="form-control" name="nombre_editar" id="nombre_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="proveedor_editar" class="form-label">Proveedor</label>
                <input type="text" required class="form-control" name="proveedor_editar" id="proveedor_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="precio_compra_editar" class="form-label">Precio Compra</label>
                <input type="tel" required class="form-control" name="precio_compra_editar" id="precio_compra_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="iva_editar" class="form-label">IVA</label>
                <input type="tel" required class="form-control" name="iva_editar" id="iva_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="precio_venta_editar" class="form-label">Precio Venta</label>
                <input type="tel" required class="form-control" name="precio_venta_editar" id="precio_venta_editar">
              </div>
            </div>
            <div class="row">
              <hr>
              <div class="col-md-12 d-inline-flex">
                <button  type="button" class="d-flex justify-content-start btn btn-secondary me-auto" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn app-btn-primary d-flex justify-content-end">Guardar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div><!-- End editModal-->

<!-- Javascript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


<!-- Page Specific JS -->
<script src="js/code.js"></script>
<script src="js/app.js"></script>
<script>
  //FunciÃ³n abrir modal Editar
  on(document, 'click', '.btnEdit', e=>{
    const fila = e.target.parentNode.parentNode
    id_editar.value = fila.children[0].innerHTML
    codigo_editar.value = fila.children[1].innerHTML
    nombre_editar.value = fila.children[2].innerHTML
    proveedor_editar.value = fila.children[3].innerHTML
    precio_compra_editar.value = fila.children[5].innerHTML
    iva_editar.value = fila.children[6].innerHTML
    precio_venta_editar.value = fila.children[7].innerHTML
    editModal.show()
  })
</script>
</body>
</html>

