<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tienda Generica - Modulo Clientes</title>

  <!-- Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta name="description" content="Tienda Generica - Modulo Clientes">
  <meta name="author" content="">
  <link rel="shortcut icon" href="favicon.ico">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- FontAwesome JS-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

  <!-- App CSS -->
  <link id="theme-style" rel="stylesheet" href="css/portal.css">
  <link id="theme-style" rel="stylesheet" href="css/style.css">

</head>

<body class="app">
  <!-- Header / Navbar Include -->
  <%- include('templates/navbar.ejs') %>
  <div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
      <div class="container-xl">

        <div class="row g-3 mb-4 align-items-center justify-content-between">
          <div class="col-auto">
            <h1 class="app-page-title mb-0">Modulo clientes</h1>
          </div>
          <div class="col-auto">
            <div class="page-utilities">
              <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                <div class="col-auto">
                  <form class="table-search-form row gx-1 align-items-center">
                    <div class="col-auto">
                      <div class="row g-0">
                        <div class="form-group col-md-8">
                          <input type="text" name="search" class="form-control" placeholder="Buscar..." aria-label="search">
                        </div>
                        <div class="form-group col-md-4">
                          <select class="form-select w-30" name="type" aria-label="type">
                            <option selected value="nombre_cliente">Nombre</option>
                            <option value="cedula_cliente">Cedula</option>
                            <option value="email_cliente">Email</option>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <button type="submit" class="btn app-btn-secondary">Buscar</button>
                    </div>
                    <div class="col-auto">
                      <button type="button" class="btnAdd btn app-btn-primary">Agregar Cliente</button>
                    </div>
                  </form>

                </div><!--//col-->

              </div><!--//row-->
            </div><!--//table-utilities-->
          </div><!--//col-auto-->
        </div><!--//row-->

        <div class="app-card app-card-orders-table shadow-sm mb-5">
          <div class="app-card-body">
            <div class="table-responsive">
              <table class="table app-table-hover mb-0 text-left">
                <thead>
                <tr>
                  <th class="d-none">Id</th>
                  <th>Cedula</th>
                  <th>Nombre</th>
                  <th>Dirección</th>
                  <th>Email</th>
                  <th>Telefono</th>
                  <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                <% clientes.forEach( (cliente)=> {  %>
                  <tr>
                    <td class="d-none"><%= cliente._id %></td>
                    <td><%= cliente.cedula_cliente %></td>
                    <td><%= cliente.nombre_cliente %></td>
                    <td><%= cliente.direccion_cliente %></td>
                    <td><%= cliente.email_cliente %></td>
                    <td><%= cliente.telefono_cliente %></td>
                    <td>
                      <a type="button" class="btnEdit btn-sm btn-success">Ver</a>
                      <a type="button" href="/clientes/borrar/<%= cliente._id %>" class="btn-sm btn-danger">Borrar</a>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
              </table>
            </div><!--//table-responsive-->
          </div><!--//app-card-body-->
        </div><!--//app-card-->



      </div><!--//container-fluid-->
    </div><!--//app-content-->

    <footer class="app-footer">
      <div class="container text-center py-3">

      </div>
    </footer><!--//app-footer-->

  </div><!--//app-wrapper-->

  <!-- Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/clientes/crear" method="post">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" required class="form-control" name="nombre" id="nombre">
              </div>
              <div class="col-md-6 mb-3">
                <label for="cedula" class="form-label">Cedula</label>
                <input type="tel" required class="form-control" name="cedula" id="cedula">
              </div>
              <div class="col-md-6 mb-3">
                <label for="direccion" class="form-label">Direccion</label>
                <input type="text" required class="form-control" name="direccion" id="direccion">
              </div>
              <div class="col-md-6 mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" required class="form-control" name="email" id="email">
              </div>
              <div class="col-md-6 mb-3">
                <label for="telefono" class="form-label">Telefono</label>
                <input type="tel" required class="form-control" name="telefono" id="telefono">
              </div>
            </div>
            <div class="row">
              <hr>
              <div class="col-md-12 d-inline-flex">
                <button  type="button" class="d-flex justify-content-start btn btn-secondary me-auto" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn app-btn-primary d-flex justify-content-end">Guardar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div><!-- End addModal-->

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="addModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Editar Cliente</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/clientes/editar" method="post">
            <div class="row">
              <input type="hidden" id="id_editar" name="id_editar">
              <div class="col-md-6 mb-3">
                <label for="nombre_editar" class="form-label">Nombre</label>
                <input type="text" required class="form-control" name="nombre_editar" id="nombre_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="cedula_editar" class="form-label">Cedula</label>
                <input type="tel" required class="form-control" name="cedula_editar" id="cedula_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="direccion_editar" class="form-label">Direccion</label>
                <input type="text" required class="form-control" name="direccion_editar" id="direccion_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="email_editar" class="form-label">Email</label>
                <input type="email" required class="form-control" name="email_editar" id="email_editar">
              </div>
              <div class="col-md-6 mb-3">
                <label for="telefono_editar" class="form-label">Telefono</label>
                <input type="tel" required class="form-control" name="telefono_editar" id="telefono_editar">
              </div>
            </div>
            <div class="row">
              <hr>
              <div class="col-md-12 d-inline-flex">
                <button  type="button" class="d-flex justify-content-start btn btn-secondary me-auto" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn app-btn-primary d-flex justify-content-end">Guardar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div><!-- End editModal-->

<!-- Javascript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


<!-- Page Specific JS -->
<script src="js/code.js"></script>
<script src="js/app.js"></script>
<script>
  //Función abrir modal Editar
on(document, 'click', '.btnEdit', e=>{
  const fila = e.target.parentNode.parentNode
  id_editar.value = fila.children[0].innerHTML
  cedula_editar.value = fila.children[1].innerHTML
  nombre_editar.value = fila.children[2].innerHTML
  direccion_editar.value = fila.children[3].innerHTML
  email_editar.value = fila.children[4].innerHTML
  telefono_editar.value = fila.children[5].innerHTML
  editModal.show()
})
</script>
</body>
</html>

